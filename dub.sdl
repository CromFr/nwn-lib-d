name "nwn-lib-d"
description "Library & tooling for Neverwinter Nights 2 resource files"
license "GPL-3.0"
copyright "Copyright Â© 2016, Thibaut CHARLES"
authors "Thibaut CHARLES (CromFr)"

targetType "library"
targetName "nwn-d"
stringImportPaths "unittest"

x:ddoxTool "scod"
x:ddoxFilterArgs "--min-protection=Protected"

subPackage {
	name "nwn-gff"
	sourcePaths "source/"
	importPaths "source/"

	configuration "application" {
		targetType "executable"
		targetName "nwn-gff"
		mainSourceFile "tools/nwn-gff.d"
	}
	configuration "unittest" {
		stringImportPaths "unittest"
	}
}
subPackage {
	name "nwn-erf"
	sourcePaths "source/"
	importPaths "source/"

	configuration "application" {
		targetType "executable"
		targetName "nwn-erf"
		mainSourceFile "tools/nwn-erf.d"
	}
	configuration "unittest" {
		stringImportPaths "unittest"
	}
}
subPackage {
	name "nwn-tlk"
	sourcePaths "source/"
	importPaths "source/"

	configuration "application" {
		targetType "executable"
		targetName "nwn-tlk"
		mainSourceFile "tools/nwn-tlk.d"
	}
	configuration "unittest" {
		stringImportPaths "unittest"
	}
}

